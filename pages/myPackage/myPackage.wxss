/* pages/myPackage/myPackage.wxss */
.swiper-tab{
  width:100%;
  text-align: center;
  height: 8vh;
  line-height: 8vh;
  display: flex;
  flex-flow: row;
}

.swiper-tab-item{
    width: 50%; 
}

.inactive{
  border-bottom: 2rpx solid #ccc;
}
.active{
    color:#09bb07;
    border-bottom: 4rpx solid #09bb07;
}

swiper{
  text-align: center;
  height: 92vh;
}

.scrollView{
  background-color: #F0F8FF;
  height: 100%;
  width: 100%;
}

.package-image{
  width: 200rpx;
  height: 200rpx;
  margin-right: 50rpx;
  margin-top: 20rpx;
}

.swiperItem{
  display: flex;
  flex-direction: column
}

.packageOverview{
  display: flex;
  height: 20vh;
  border-bottom: 4rpx solid #ccc;
}

.packageDescription{
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  width:300rpx;
  word-wrap:break-word;
  text-align: left
}

.add{
  position: fixed;
  height: 65rpx;
  width: 65rpx;
  top:93vh;
  left: 640rpx;
}

.star{
  height: 100rpx;
  width: 100rpx;
  position: relative;
  left: 50rpx;
  top:70rpx
}


